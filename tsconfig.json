{
    "compileOnSave": true,
    "compilerOptions": {
      "outDir": "dist",
      "sourceMap": true,
      "declaration": true,
      "module": "commonjs",
      "target": "ES6",
      "experimentalDecorators": true,
      "emitDecoratorMetadata":true,
      "types": ["reflect-metadata"]
    },
    "include": [
      "src/**/*",
      "tests/**/*"
    ],
    "exclude": [
      "node_modules",
      "dist"
    ]
  }