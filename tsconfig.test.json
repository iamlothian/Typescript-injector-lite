{
    "compileOnSave": true,
    "compilerOptions": {
      "outDir": "dist",
      "sourceMap": true,
      "declaration": true,
      "module": "commonjs",
      "target": "ES5",
      "experimentalDecorators": true,
      "emitDecoratorMetadata":true,
      "lib":["es6"],
      "types": ["reflect-metadata"]
    },
    "include": [
      "./src/**/*",
      "./tests/**/*"
    ],
    "exclude": [
      "node_modules",
      "dist"
    ]
  }